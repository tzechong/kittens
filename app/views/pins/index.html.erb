<div class="jumbotron">
  <h1>Welcome to Pinterest for Kittens</h1>

  <h2>Listing pins</h2>

  <table class= "table table-striped">
    <div class="table-responsive">
    <thead>
      <tr>
        <th>Description</th>
      <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
       <tr>
        <td><%= pin.description %></td>
        <td><span class="glyphicon glyphicon-list-alt"></span> <%= link_to 'Show', pin %></td>
        <td><span class="glyphicon glyphicon-pencil"></span> <%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><span class="glyphicon glyphicon-trash"></span> <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
  </table>

  <br>

  <%= link_to 'New Pin', new_pin_path %>
  <br><br>
  <% if !user_signed_in? %>
    <p>
    <a class="btn btn-primary btn-lg" role="button" href="/users/sign_in">Sign In</a> 
    <a class="btn btn-danger btn-lg" role="button" href="/users/sign_up">Sign Up</a>
  </p>
  <% else %>
  <% end %>
</div>